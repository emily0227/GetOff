<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFCC"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


<TextView
    android:id="@+id/word"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:text="Get Off"
    android:textSize="50dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/textStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="시작하기"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/word"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn"/>

    <ImageView
    android:id="@+id/home"
    android:layout_width="104dp"
    android:layout_height="79dp"
    android:layout_marginEnd="284dp"
    android:layout_marginRight="284dp"
    android:layout_marginBottom="40dp"
    android:layout_marginLeft="5dp"
    android:src="@drawable/home"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"

    tools:layout_editor_absoluteY="614dp" />

    <ImageView
        android:id="@+id/subway"
        android:layout_width="104dp"
        android:layout_height="79dp"
        android:layout_marginEnd="284dp"
        android:layout_marginRight="284dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/subway"
        app:layout_constraintLeft_toRightOf="@id/home"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="614dp" />

    <ImageView
        android:id="@+id/bus"
        android:layout_width="104dp"
        android:layout_height="79dp"
        android:layout_marginEnd="284dp"
        android:layout_marginRight="284dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/bus"
        app:layout_constraintLeft_toRightOf="@id/subway"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="614dp" />






</android.support.constraint.ConstraintLayout>